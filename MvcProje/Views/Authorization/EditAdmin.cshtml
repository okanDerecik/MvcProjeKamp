@model EntityLayer.Concreate.Admin

@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        <br />
        @Html.HiddenFor(x => x.AdminMail, new { @class = "form-control" })
        <br />
        @Html.HiddenFor(x => x.AdminPasswordHash, new { @class = "form-control" })
        <br />
        @Html.HiddenFor(x => x.AdminPasswordSalt, new { @class = "form-control" })
        <br />
        @Html.Label("Rol")
        @Html.TextBoxFor(x => x.RoleId, new { @class = "form-control" })
        <button class="btn btn-success">Güncelle</button>

    </div>
}
