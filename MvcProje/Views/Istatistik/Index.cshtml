

@{
    ViewBag.Title = "IstatistikView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>İstatistikler</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4 mt-3 mr-6">
            <div class="card text-white bg-success mb-3" style="width:300px;height:250px">
                <div class="card-body">
                    <h1>@ViewBag.totalcategory</h1>
                    <p class="card-text" style="font-size:30px">Toplam Kategori Sayısı</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-3 mr-6">
            <div class="card text-white bg-primary mb-3" style="width: 300px; height: 250px">
                <div class="card-body">
                    <h1>@ViewBag.totalheadingwithsoftware</h1>
                    <p class="card-text" style="font-size:30px">Yazılım Kategorisine Ait Başlık Sayısı</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mt-3 mr-6">
            <div class="card text-white bg-secondary mb-3" style="width: 300px; height: 250px">
                <div class="card-body">
                    <h1>@ViewBag.containinglettera</h1>
                    <p class="card-text" style="font-size:30px">Yazar Adında ve Soyadında "A" Harfi Olanların Sayısı</p>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4 mt-3 mr-6">
            <div class="card text-white bg-info mb-3" style="width: 300px; height: 250px">
                <div class="card-body">
                    <h1>@ViewBag.icerik</h1>
                    <p class="card-text" style="font-size:30px">En Fazla Başlığa Sahip Kategori Adı</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-3 mr-6">
            <div class="card text-white bg-warning mb-3" style="width: 300px; height: 250px">
                <div class="card-body">
                    <h1>@ViewBag.difference</h1>
                    <p class="card-text" style="font-size:30px">Durumu True Olanlar İle False Olanlar Arasındaki Fark</p>
                </div>
            </div>
        </div>
    </div>
</div>