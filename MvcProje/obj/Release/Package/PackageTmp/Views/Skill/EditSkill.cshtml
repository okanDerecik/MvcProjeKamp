@model  EntityLayer.Concreate.Skill

@{
    ViewBag.Title = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


                    @using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post, new { @id = "form" }))
                    {                       
                            <div class="form-group">
                                @Html.Label("Yetenek ID")
                                @Html.TextBoxFor(x=>x.SkillID, new {@class="form-control"})
                                <br />
                                @Html.Label("Yetenek Adı")
                                @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
                                <br />      <br />
                                @Html.Label("Yetenek Derecesi (100 Üzerinden)")
                                <br />
                                @Html.TextBoxFor(x => x.SkillRange, new { @class = "form-control"})
                                <br />
                                <button class="btn btn-danger">Güncelle</button>
                            </div>
                    }
                
